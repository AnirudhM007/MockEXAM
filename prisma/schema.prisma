generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Exam {
  id          String @id @default(cuid())
  name        String @unique
  description String
  questions   Question[]
}

model Question {
  id        String @id @default(cuid())
  examId    String
  text      String
  options   String
  correct   String
  module    String?
  
  // Multi-select support
  answerCount     Int?     @default(1)  // Number of correct answers (1 = single, 2+ = multi)
  correctAnswers  String?  @db.Text     // JSON array of all correct answers for multi-select
  
  // Context fields for images, code blocks, etc.
  hasContext   Boolean  @default(false)
  contextType  String?  // "image", "code", "diagram", "mixed"
  
  exam      Exam   @relation(fields: [examId], references: [id])
  contexts  QuestionContext[]
}

model QuestionContext {
  id          String    @id @default(cuid())
  questionId  String
  type        String    // "image", "code_block", "diagram", "rule"
  content     String    @db.Text  // For code: the code text; for images: file path
  position    Int       // Order/position relative to question (0 = before question, 1+ = after)
  metadata    String?   @db.Text  // JSON: { language, dimensions, etc. }
  
  question    Question  @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  @@index([questionId])
}

model Attempt {
  id        String @id @default(cuid())
  score     Int
  total     Int
  date      DateTime @default(now())
}
